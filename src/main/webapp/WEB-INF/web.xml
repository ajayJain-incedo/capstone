<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
  <display-name>Archetype Created Web Application</display-name>

<!--  Servlet declaration-->
  <servlet>
    <servlet-name>login servlet</servlet-name>
    <servlet-class>com.servlets.LoginServlet</servlet-class>
  </servlet>

  <servlet>
    <servlet-name>register servlet</servlet-name>
    <servlet-class>com.servlets.RegisterServlet</servlet-class>
  </servlet>

  <servlet>
    <servlet-name>update item</servlet-name>
    <servlet-class>com.servlets.UpdateItemServlet</servlet-class>
  </servlet>

  <servlet>
    <servlet-name>add item servlet</servlet-name>
    <servlet-class>com.servlets.AddItemServlet</servlet-class>
  </servlet>

  <servlet>
    <servlet-name>DisplayProduct</servlet-name>
    <servlet-class>com.servlets.DisplayProductsServlet</servlet-class>
  </servlet>

  <servlet>
    <servlet-name>SearchProduct</servlet-name>
    <servlet-class>com.servlets.SearchProductServlet</servlet-class>
  </servlet>

  <servlet>
    <servlet-name>CategoryProduct</servlet-name>
    <servlet-class>com.servlets.CategoryProductServlet</servlet-class>
  </servlet>

  <servlet>
    <servlet-name>AddToCart</servlet-name>
    <servlet-class>com.servlets.AddToCartServlet</servlet-class>
  </servlet>

<!--Servlet Mapping-->

  <servlet-mapping>
    <servlet-name>login servlet</servlet-name>
    <url-pattern>/LoginServlet</url-pattern>
  </servlet-mapping>

  <servlet-mapping>
    <servlet-name>add item servlet</servlet-name>
    <url-pattern>/AddItemServlet</url-pattern>
  </servlet-mapping>

  <servlet-mapping>
    <servlet-name>register servlet</servlet-name>
    <url-pattern>/RegisterServlet</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>update item</servlet-name>
    <url-pattern>/UpdateItemServlet</url-pattern>
  </servlet-mapping>

  <servlet-mapping>
    <servlet-name>DisplayProduct</servlet-name>
    <url-pattern>/DisplayProduct</url-pattern>
  </servlet-mapping>

  <servlet-mapping>
    <servlet-name>SearchProduct</servlet-name>
    <url-pattern>/SearchProduct</url-pattern>
  </servlet-mapping>

  <servlet-mapping>
    <servlet-name>CategoryProduct</servlet-name>
    <url-pattern>/CategoryProduct</url-pattern>
  </servlet-mapping>

  <servlet-mapping>
    <servlet-name>AddToCart</servlet-name>
    <url-pattern>/AddToCart</url-pattern>
  </servlet-mapping>

</web-app>
