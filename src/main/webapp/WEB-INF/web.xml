<?xml version="1.0" encoding="UTF-8"?>

<web-app xmlns="http://java.sun.com/xml/ns/javaee"
         version="2.5"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">
  <display-name>Archetype Created Web Application</display-name>

  <error-page>
    <error-code>404</error-code>
    <location>/views/error_pages/error_page2.jsp</location>
  </error-page>

<!--  Servlet declaration-->
  <servlet>
    <servlet-name>login servlet</servlet-name>
    <servlet-class>com.servlets.LoginServlet</servlet-class>
  </servlet>

  <servlet>
    <servlet-name>register servlet</servlet-name>
    <servlet-class>com.servlets.RegisterServlet</servlet-class>
  </servlet>

  <servlet>
    <servlet-name>update item</servlet-name>
    <servlet-class>com.servlets.UpdateItemServlet</servlet-class>
  </servlet>

  <servlet>
    <servlet-name>add item servlet</servlet-name>
    <servlet-class>com.servlets.AddItemServlet</servlet-class>
  </servlet>

  <servlet>
    <servlet-name>DisplayProduct</servlet-name>
    <servlet-class>com.servlets.DisplayProductsServlet</servlet-class>
  </servlet>

  <servlet>
    <servlet-name>SearchProduct</servlet-name>
    <servlet-class>com.servlets.SearchProductServlet</servlet-class>
  </servlet>

  <servlet>
    <servlet-name>CategoryProduct</servlet-name>
    <servlet-class>com.servlets.CategoryProductServlet</servlet-class>
  </servlet>

  <servlet>
    <servlet-name>ForgotPassword</servlet-name>
    <servlet-class>com.servlets.ForgotPassword</servlet-class>
  </servlet>

  <servlet>
    <servlet-name>AddToCart</servlet-name>
    <servlet-class>com.servlets.AddToCartServlet</servlet-class>
  </servlet>

  <servlet>
    <servlet-name>remove item</servlet-name>
    <servlet-class>com.servlets.RemoveItemServlet</servlet-class>
  </servlet>

  <servlet>
    <servlet-name>logout</servlet-name>
    <servlet-class>com.servlets.Logout</servlet-class>
  </servlet>

  <servlet>
    <servlet-name>verify otp</servlet-name>
    <servlet-class>com.servlets.VerifyOtp</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>reset password</servlet-name>
    <servlet-class>com.servlets.ResetPassword</servlet-class>
  </servlet>

  <servlet>
    <servlet-name>SearchAdmin</servlet-name>
    <servlet-class>com.servlets.SearchAdminServlet</servlet-class>
  </servlet>

  <servlet>
    <servlet-name>RemoveFromCart</servlet-name>
    <servlet-class>com.servlets.RemoveFromCartServlet</servlet-class>
  </servlet>

<!--Servlet Mapping-->

  <servlet-mapping>
    <servlet-name>login servlet</servlet-name>
    <url-pattern>/LoginServlet</url-pattern>
  </servlet-mapping>

  <servlet-mapping>
    <servlet-name>add item servlet</servlet-name>
    <url-pattern>/AddItemServlet</url-pattern>
  </servlet-mapping>

  <servlet-mapping>
    <servlet-name>register servlet</servlet-name>
    <url-pattern>/RegisterServlet</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>update item</servlet-name>
    <url-pattern>/UpdateItemServlet</url-pattern>
  </servlet-mapping>

  <servlet-mapping>
    <servlet-name>DisplayProduct</servlet-name>
    <url-pattern>/DisplayProduct</url-pattern>
  </servlet-mapping>

  <servlet-mapping>
    <servlet-name>SearchProduct</servlet-name>
    <url-pattern>/SearchProduct</url-pattern>
  </servlet-mapping>

  <servlet-mapping>
    <servlet-name>CategoryProduct</servlet-name>
    <url-pattern>/CategoryProduct</url-pattern>
  </servlet-mapping>

  <servlet-mapping>
    <servlet-name>ForgotPassword</servlet-name>
    <url-pattern>/ForgotPassword</url-pattern>
  </servlet-mapping>

  <servlet-mapping>
    <servlet-name>AddToCart</servlet-name>
    <url-pattern>/AddToCart</url-pattern>
  </servlet-mapping>

  <servlet-mapping>
    <servlet-name>remove item</servlet-name>
    <url-pattern>/RemoveItemServlet</url-pattern>
  </servlet-mapping>

  <servlet-mapping>
    <servlet-name>logout</servlet-name>
    <url-pattern>/Logout</url-pattern>
  </servlet-mapping>

  <servlet-mapping>
    <servlet-name>verify otp</servlet-name>
    <url-pattern>/VerifyOtp</url-pattern>
  </servlet-mapping>

  <servlet-mapping>
    <servlet-name>reset password</servlet-name>
    <url-pattern>/ResetPassword</url-pattern>
  </servlet-mapping>

  <servlet-mapping>
    <servlet-name>SearchAdmin</servlet-name>
    <url-pattern>/SearchAdmin</url-pattern>
  </servlet-mapping>

  <servlet-mapping>
    <servlet-name>RemoveFromCart</servlet-name>
    <url-pattern>/RemoveFromCart</url-pattern>
  </servlet-mapping>



</web-app>
